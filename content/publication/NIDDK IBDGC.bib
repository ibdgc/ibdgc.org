  author = {Forest, Anik and Ruiz, Matthieu and Bouchard, Bertrand and Boucher, Gabrielle and Gingras, Olivier and Daneault, Caroline and Robillard Frayne, Isabelle and Rhainds, David and {iGenoMed Consortium} and {NIDDK IBD Genetics Consortium} and Tardif, Jean-Claude and Rioux, John D. and Des Rosiers, Christine},
