  eprinttype = {pmid},
  keywords = {Genetic Association Studies,Genetic Predisposition to Disease,Genotype,Humans,Inflammatory Bowel Diseases,Phenotype},
  langid = {english},
  number = {9},
  pmcid = {PMC3720704}
}

