@article{grahamFunctionalGenomicsIdentifies2015,
  title = {Functional Genomics Identifies Negative Regulatory Nodes Controlling Phagocyte Oxidative Burst},
  author = {Graham, Daniel B. and Becker, Christine E. and Doan, Aivi and Goel, Gautam and Villablanca, Eduardo J. and Knights, Dan and Mok, Amanda and Ng, Aylwin C. Y. and Doench, John G. and Root, David E. and Clish, Clary B. and Xavier, Ramnik J.},
  date = {2015-07-21},
