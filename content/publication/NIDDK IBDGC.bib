  keywords = {Adult,Canada,Case-Control Studies,Cohort Studies,Colitis; Ulcerative,Colonic Pouches,Crohn Disease,Female,Follow-Up Studies,Humans,Ileum,Intestines,Male,Microbiota,Middle Aged,Phenotype,Prognosis},
