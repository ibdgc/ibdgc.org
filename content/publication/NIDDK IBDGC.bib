  file = {/home/chris/snap/zotero-snap/common/Zotero/storage/D7ZZZ94E/Cleynen et al. - 2016 - Inherited determinants of Crohn's disease and ulce.pdf;/home/chris/snap/zotero-snap/common/Zotero/storage/MZQSTYRN/Cleynen et al. - 2016 - Inherited determinants of Crohn's disease and ulce.pdf},
