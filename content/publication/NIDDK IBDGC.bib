@article{villaniCommonVariantsNLRP32009,
  title = {Common Variants in the {{NLRP3}} Region Contribute to {{Crohn}}'s Disease Susceptibility},
  author = {Villani, Alexandra-Chloé and Lemire, Mathieu and Fortin, Geneviève and Louis, Edouard and Silverberg, Mark S. and Collette, Catherine and Baba, Nobuyasu and Libioulle, Cécile and Belaiche, Jacques and Bitton, Alain and Gaudet, Daniel and Cohen, Albert and Langelier, Diane and Fortin, Paul R. and Wither, Joan E. and Sarfati, Marika and Rutgeerts, Paul and Rioux, John D. and Vermeire, Severine and Hudson, Thomas J. and Franchimont, Denis},
