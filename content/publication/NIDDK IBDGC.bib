  eprinttype = {pmid},
  keywords = {African Americans,Alleles,Asian Continental Ancestry Group,Benchmarking,Cluster Analysis,Ethnic Groups,European Continental Ancestry Group,Gene Frequency,Genotype,Haplotypes,High-Throughput Nucleotide Sequencing,Histocompatibility Antigens Class I,Histocompatibility Antigens Class II,HLA Antigens,HLA-DRB3 Chains,HLA-DRB4 Chains,HLA-DRB5 Chains,Humans,Polymorphism; Single Nucleotide,Retrospective Studies},
