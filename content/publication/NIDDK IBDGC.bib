  author = {Goyette, Philippe and Boucher, Gabrielle and Mallon, Dermot and Ellinghaus, Eva and Jostins, Luke and Huang, Hailiang and Ripke, Stephan and Gusareva, Elena S. and Annese, Vito and Hauser, Stephen L. and Oksenberg, Jorge R. and Thomsen, Ingo and Leslie, Stephen and {International Inflammatory Bowel Disease Genetics Consortium} and {Australia and New Zealand IBDGC} and {Belgium IBD Genetics Consortium} and {Italian Group for IBD Genetic Consortium} and {NIDDK Inflammatory Bowel Disease Genetics Consortium} and {United Kingdom IBDGC} and {Wellcome Trust Case Control Consortium} and {Quebec IBD Genetics Consortium} and Daly, Mark J. and Van Steen, Kristel and Duerr, Richard H. and Barrett, Jeffrey C. and McGovern, Dermot P. B. and Schumm, L. Philip and Traherne, James A. and Carrington, Mary N. and Kosmoliaptsis, Vasilis and Karlsen, Tom H. and Franke, Andre and Rioux, John D.},
